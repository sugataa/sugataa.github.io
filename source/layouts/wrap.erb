<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <% if current_article %>
      <title><%= current_article.title %></title>
    <% elsif defined? category %>
      <title><%= category_longname category %></title>
    <% elsif current_page.data[:title] %>
      <title><%= current_page.data[:title] %></title>
    <% else %>
      <title>Sugata Acharjya</title>
    <% end %>
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <%= stylesheet_link_tag "site" %>
    <%= feed_tag :atom, "/feed.xml", title: "Atom Feed" %>
    <link rel="stylesheet" href="https://fonts.typotheque.com/WF-028965-009912.css" type="text/css" />
  </head>
  <body>
    <div class="main col justify" role="main">
      <% if current_page.data.cover %>
        <div><%= image_tag current_page.data.cover, class: 'cover-img' %></div>
      <% end %>
      <%= yield %>
    </div>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-39935527-1', 'auto');
      ga('send', 'pageview');
    </script>
  </body>
</html>
