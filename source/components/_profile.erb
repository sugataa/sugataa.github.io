  </div>
  <div class="social-center">
    <!-- <a class="social-link" target="_blank" href="https://twitter.com/<%= config[:twitter_username] %>"><span class="icon-twitter"></span> Instagram</a> -->
    <a class="social-link" target="_blank" href="https://www.linkedin.com/in/<%= config[:linkedin_username] %>"><span class="icon-linkedin"></span> LinkedIn</a>
  </div>
